block vars

block main
	mixin detail-news()
		+header-bottom()
		.detail-news.news
			.container.news__container
				.news__banners-top
					.news__banner-top
						img(src='./img/news/banner-1-top.jpg', alt= 'banner-1')
					.news__banner-top
						picture
							source(srcset='./img/news/banner-2-top.jpg', media='(min-width: 768px)')
